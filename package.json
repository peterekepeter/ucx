{
	"name": "uclint",
	"displayName": "uclint",
	"description": "UnrealScript linter&formatter",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:unrealscript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "uclint.helloWorld",
				"title": "Hello World"
			}
		],
		"configurationDefaults": {
			"[unrealscript]": {
				"editor.semanticHighlighting.enabled": true
			}
		},
		"languages": [
			{
				"id": "unrealscript",
				"aliases": [
					"UnrealScript",
					"unrealscript"
				],
				"extensions": [
					".uc",
					".uci"
				],
				"firstLine": "^\\s*class\\s*[a-zA-Z0-9_]+\\s*(?:extends|expands)\\s*[a-zA-Z0-9_]+"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"unittest": "jest",
		"unittest:watch": "jest --watch"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	},
	"dependencies": {
		"@types/jest": "^27.4.0",
		"jest": "^27.4.7",
		"ts-jest": "^27.1.3"
	}
}
