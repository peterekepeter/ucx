{
	"name": "ucx",
	"displayName": "ucx",
	"description": "UnrealScript Extensions",
	"version": "0.9.3",
	"repository": "https://github.com/peterekepeter/ucx",
	"publisher": "peterekepeter",
	"engines": {
		"vscode": "^1.75.0"
	},
	"bin": "./out/ucx.js",
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ucx.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "ucx",
			"properties": {
				"ucx.reportParserErrors": {
					"type": "boolean",
					"default": "false",
					"description": "Reports parser errors. (useful for parser development)"
				},
				"ucx.uccPath": {
					"type": "string",
					"description": "Path to UCC"
				}
			}
		},
		"configurationDefaults": {
			"[unrealscript]": {
				"editor.semanticHighlighting.enabled": true
			}
		},
		"languages": [
			{
				"id": "unrealscript",
				"aliases": [
					"UnrealScript",
					"unrealscript"
				],
				"extensions": [
					".uc",
					".uci"
				],
				"firstLine": "^\\s*class\\s*[a-zA-Z0-9_]+\\s*(?:extends|expands)\\s*[a-zA-Z0-9_]+",
				"configuration": "./uc.language-configuration.json",
				"icon": {
					"dark": "./assets/uc-icon-dark.svg",
					"light": "./assets/uc-icon-light.svg"
				}
			},
			{
				"id": "ini",
				"extensions": [
					".ini",
					".int"
				],
				"icon": {
					"dark": "./assets/ini-icon-dark.svg",
					"light": "./assets/ini-icon-light.svg"
				}
			}
		],
		"grammars": [
			{
				"language": "unrealscript",
				"scopeName": "source.unrealscript",
				"path": "./syntaxes/unrealscript.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"publish-all": "npm run npm-publish && npm run vsce-publish",
		"vscode:prepublish": "npx rimraf ./out && npm run esbuild-base -- --minify",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"unittest": "jest",
		"unittest:watch": "jest --watch",
		"pack": "npx vsce package",
		"vsce-publish": "npx vsce publish",
		"esbuild-base": "npx esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
		"esbuild-ucx": "npx esbuild ./src/ucx.ts --bundle --outfile=out/ucx.js --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"npm-publish": "npm run prepublish && npm publish",
		"prepublish": "npx rimraf ./out && npm run esbuild-ucx -- --minify"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/jest": "^27.4.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.75.0",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"jest": "^27.4.7",
		"mocha": "^9.1.3",
		"ts-jest": "^27.1.3",
		"typescript": "^4.4.4"
	}
}
